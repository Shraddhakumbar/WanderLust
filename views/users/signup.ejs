<% layout("layouts/boilerplate") %>
<div class="row mt-3">
     <h3 class="col-6 offset-3"><b>Signup on Wanderlust</b></h3>
     <br><br><br>
     <div class="col-6 offset-3">

        <form action="/signup" method="POST" class="needs-validation" novalidate>


           <div class="mb-3">
           <lable for="username" class="form-lable">Username:</lable>
             <input name="username" placeholder="Enter Username" type="text" class="form-control"
               required />
            <div class="invalid-feedback">Please enter valid Username</div>

          </div>

          <div class="mb-3">
           <lable for="email" class="form-lable">Email</lable>
             <input name="email" placeholder="Enter email" type="text" class="form-control"
               required />
            <div class="invalid-feedback">Please enter valid email</div>

          </div>



          <div class="mb-3">
           <lable for="password" class="form-lable">Password</lable>
             <input name="password" placeholder="Enter Password" type="password" class="form-control"
               required />
            <div class="invalid-feedback">Please enter correct password</div>

          </div>

          <button class="btn btn-success">SignUp</button>

        </form>

      </div> 
</div>