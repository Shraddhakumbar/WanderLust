<% layout("layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <!-- <br/> <br/>  -->
                <h3>Create a new Listing</h3>
                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <lable for="title" class="form-lable"> Title</lable>
                        <input name="listing[title]" placeholder="add a catchy title" type="text" class="form-control"
                            required />
                            <div class="invalid-feedback">Please enter a Title</div>

                    </div>

                    <div class="mb-3">
                        <lable for="description" class="form-lable"> Description</lable>
                        <textarea name="listing[description]" class="form-control" required></textarea>
                            <div class="invalid-feedback">Please enter a Short description</div>
                    </div>

                    <div class="mb-3">
                        <lable for="image" class="form-lable"> Upload Image</lable>
                  <input name="listing[image]"  type="file" class="form-control">
                  required
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <lable for="price" class="form-lable"> Price</lable>
                            
                            <input name="listing[price]" placeholder="1200" type="number" class="form-control" required>
                            <div class="invalid-feedback">Price should be valid</div>

                        </div>

                        <div class="mb-3 col-md-8">
                            <lable for="country" class="form-lable"> Country</lable>
                            <input name="listing[country]" placeholder="India" type="text" class="form-control"
                                required>
                        <div class="invalid-feedback">Country should be valid</div>

                        </div>
                    </div>

                    <div class="mb-3">
                        <lable for="location" class="form-lable"> Location</lable>
                        <input name="listing[location]" placeholder="Bengluru, karnataka" type="text"
                            class="form-control" required>
                    <div class="invalid-feedback">Location should be valid</div>

                    </div>

                    <button class="btn btn-dark add-btn mt-3">Add</button>

                </form>
            </div>
        </div>
    </body>

   

    